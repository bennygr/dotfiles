#parse the state of the git branch
function parse_git_branch() {
  local DIRTY STATUS
  STATUS=$(git status --porcelain 2>/dev/null)
  [ $? -eq 128 ] && return
  [ -z "$(echo "$STATUS" | grep -e '^M')"    ] || DIRTY="≛ "
  [ -z "$(echo "$STATUS" | grep -e '^ M')"    ] || DIRTY="★ "
  [ -z "$(echo "$STATUS" | grep -e '^[D]')" ] || DIRTY="${DIRTY}- "
  [ -z "$(echo "$STATUS" | grep -e '^[A]')" ] || DIRTY="${DIRTY}+ "
  [ -z "$(echo "$STATUS" | grep -e '^[R]')" ] || DIRTY="${DIRTY}r "
  [ -z "$(git stash list)" ]                    || DIRTY="${DIRTY}☰ "
  echo "( ⤳ $(git branch 2>/dev/null | sed -e '/^[^*]/d' -e 's/* //') $DIRTY)"
}

#parses if user is root
function parse_if_root() {
  if [ $EUID -eq 0 ]
  then
    echo "⚡ "
  fi
}

#promt
PS1='\[\033[0;34m\]\u \e[31m$(parse_if_root)\[\033[0;37m\]at \[\033[0;34m\]\H \[\033[0;37m\]in \[\033[0;35m\]\w \[\033[0;036m\]$(parse_git_branch) \n\[\033[0;34m\]> \[\033[0m\]'

